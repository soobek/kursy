<div class="hero-unit">

<h1>Zdjęcia</h1>

<%= link_to("Dodaj nowe zdjęcie", {:action => 'nowe'}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right;">Ilość zdjęć: <%= @zdjecia.size %></p>


  <table class="table table-striped">
	<tr class="info">
		<th>pozycja</th>
        <th>nazwa</th>
        <th>zdjecie</th>
        <th>opis[...]</th>
        <th>widoczne</th>
        <th>akcja</th>
    </tr>

<% @zdjecia.each do |zdjecie| %>	
	<tr>
		<td><%= zdjecie.pozycja %></td>
		<td><%= zdjecie.nazwa %></td>
		<td><%= image_tag zdjecie.zdjecie.url(:thumb) %></td>
		<td><%= truncate(zdjecie.opis, :length => 50, :omission => "[...]") %></td>
		<td class="center"><%= status_widoku(zdjecie.widoczne) %></td>
		<td  class="actions">
			<%= link_to("Pokaż", {:action => 'pokaz', :id => zdjecie.id}, :class => 'btn btn-xs btn-default') %>
			<%= link_to("Edycja", {:action => 'edycja', :id => zdjecie.id}, :class => 'btn btn-xs btn-primary') %>			
			<%= link_to("Usuń",  {:action => 'usun', :id => zdjecie.id}, :class => 'btn btn-xs btn-danger') %>			
		</td>
	</tr>
<% end %>
    
</table>
</div>